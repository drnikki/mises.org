; Regions
regions[hidden]         = 'Hidden'
regions[navigation]     = 'Navigation'
regions[header_left]    = 'Top Bar Left'
regions[header_right]   = 'Top Bar Right'
regions[featured_left]  = 'Featured Left'
regions[featured_right] = 'Featured Right'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Sidebar Left'
regions[sidebar_second_top] = 'Sidebar Right Top'
regions[sidebar_second] = 'Sidebar Right'
regions[bottom_one]     = 'Content Bottom One'
regions[bottom_two]     = 'Content Bottom Two'
regions[bottom_three]   = 'Content Bottom Three'
regions[bottom_four]    = 'Content Bottom Four'
regions[menu_footer_one]= 'Menu Footer Left'
regions[menu_footer_two]= 'Menu Footer Right'
regions[footer_left]    = 'Footer Left'
regions[footer_center]  = 'Footer Center'
regions[footer_right]   = 'Footer Right'
